{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "types": ["react-native", "react-native-css-interop/types", "nativewind/types"],
    "baseUrl": ".",
    "paths": {
      "@memex/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": [
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
