{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "types": [
      "react-native",
      "react-native-css-interop/types",
      "nativewind/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@memex/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}